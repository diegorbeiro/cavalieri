<Page x:Class="Projeto.Telinicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projeto"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Telinicio">

    <Grid>
        <Viewbox Stretch="Fill">
            <Grid Width="800" Height="600">
                <Image Source="/LOGIN.png" Stretch="Fill" Margin="0,0,-16,0"/>
                <Button x:Name="Cadastro" Content="Entrar" Background="Red" BorderBrush="{x:Null}" Click="Cadastro_Click" Width="108" Height="38" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="242,469,0,0" Opacity="0"/>
                <Button x:Name="Login" Content="Entrar" Background="Red" BorderBrush="{x:Null}" Click="Login_Click" Width="107" Height="38" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="435,469,0,0" Opacity="0"/>
            </Grid>
        </Viewbox>
    </Grid>
</Page>
